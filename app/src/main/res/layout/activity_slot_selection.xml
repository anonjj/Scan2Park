<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:padding="24dp">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_arrow_back"
        app:tint="@color/text_primary"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvLocationTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Select Slot"
        android:textColor="@color/text_primary"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/legendLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnBack">

        <View
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/bg_card_modern"
            android:backgroundTint="@color/brand_secondary"/> <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="24dp"/>

        <View
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/bg_card_modern"
            android:backgroundTint="#E0E0E0"/> <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Occupied"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:layout_marginStart="8dp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSlots"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/legendLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomActionArea"/>

    <LinearLayout
        android:id="@+id/bottomActionArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvSelectionInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No slot selected"
            android:textColor="@color/brand_blue"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBook"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Confirm Booking"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            app:cornerRadius="12dp"
            android:backgroundTint="@color/uber_black"
            android:textColor="@color/uber_white"
            android:enabled="false"
            android:alpha="0.5"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/brand_primary"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>