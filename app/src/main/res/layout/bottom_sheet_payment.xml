<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_neon_card"
    android:backgroundTint="#0F1628"
    android:padding="24dp">

    <View
        android:id="@+id/dragHandle"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="#33FFFFFF"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvPayTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secure Payment"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/dragHandle"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvPayAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¹500.00"
        android:textColor="#00FF88"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvPayTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/lblMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT METHOD"
        android:textColor="#7A8BA0"
        android:textSize="12sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvPayAmount"
        app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/btnUpi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/input_field_bg"
            android:padding="16dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintTop_toBottomOf="@id/lblMethod"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_launcher_foreground"
                app:tint="#FFFFFF"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="UPI (GPay, PhonePe)"
                android:textColor="#FFFFFF"
                android:layout_marginStart="16dp"/>

            <RadioButton
                android:id="@+id/radioUpi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:clickable="false"
                android:focusable="false"
                android:buttonTint="#00FF88"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/input_field_bg"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:alpha="0.5"
            app:layout_constraintTop_toBottomOf="@id/btnUpi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_wallet"
                app:tint="#FFFFFF"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Credit / Debit Card"
                android:textColor="#FFFFFF"
                android:layout_marginStart="16dp"/>

            <RadioButton
                android:id="@+id/radioCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:clickable="false"
                android:focusable="false"
                android:buttonTint="#7A8BA0"/>
        </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConfirmPayment"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:text="PAY SECURELY"
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="@drawable/btn_gradient_primary"
        android:backgroundTint="#00FF88"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>