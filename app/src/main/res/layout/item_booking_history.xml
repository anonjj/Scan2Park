<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:backgroundTint="#151932">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"> <View
        android:id="@+id/viewStatusColor"
        android:layout_width="6dp"
        android:layout_height="0dp"
        android:background="#00FF88"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvSlotName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A4"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@id/viewStatusColor"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvLocationName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Neon Cyber Mall"
            android:textColor="#7A8BA0"
            android:textSize="14sp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@id/tvSlotName"
            app:layout_constraintTop_toTopOf="@id/tvSlotName"
            app:layout_constraintBottom_toBottomOf="@id/tvSlotName"
            app:layout_constraintEnd_toStartOf="@id/tvPrice"/>

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹120"
            android:textColor="#00F0FF"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvSlotName"
            app:layout_constraintBottom_toBottomOf="@id/tvSlotName"/>

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#2A3145"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toEndOf="@id/viewStatusColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSlotName"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19 Dec, 02:30 PM"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/viewStatusColor"
            app:layout_constraintTop_toBottomOf="@id/divider"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACTIVE"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="#00FF88"
            android:background="@drawable/input_field_bg"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvDate"
            app:layout_constraintBottom_toBottomOf="@id/tvDate"/>

        <LinearLayout
            android:id="@+id/layoutActions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/tvDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDate">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="CANCEL"
                android:textSize="12sp"
                android:textColor="#FF0055"
                android:background="@drawable/input_field_bg"
                android:layout_marginEnd="8dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnExtend"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="EXTEND"
                android:textSize="12sp"
                android:textColor="#000000"
                android:backgroundTint="#00FF88"
                android:background="@drawable/btn_gradient_primary"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>